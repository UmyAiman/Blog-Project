    <h1 class="hero-title">Hi, Iâ€™m Ume Aiman</h1>
    <p class="hero-subtitle">Sharing insights, Blog posts and ideas on modern IT technologies.</p>

    <img src="/img/blog.jpg" class="hero-image" alt="Blog hero image">
</section>

<!-- POST LIST -->
<section class="posts-section">
    <h2 class="section-title">Latest Posts</h2>

    <div class="posts-grid">
        <% data.forEach(post => { %>
            <a href="/post/<%= post._id %>" class="post-card">

                <h3 class="post-title"><%= post.title %></h3>

                <p class="post-date">
                    <%= post.createdAt.toDateString() %>
                </p>

                <p class="post-snippet">
                    <%= post.body.length > 120 ? post.body.substring(0, 120) + '...' : post.body %>
                </p>

            </a>
        <% }) %>
    </div>
</section>

<!-- PAGINATION -->
<div class="pagination">
    <% if (typeof hasMore !== "undefined" && hasMore === true) { %>
        <a href="/?page=<%= (page || 1) + 1 %>" class="load-more-btn">Load More</a>
    <% } %>
</div>
