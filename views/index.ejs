<div class="author">
    <h1 class="author__heading">Hi, I am Ume-Aiman.</h1>
    <p class="author__body">Full Stack Web Developer.</p>
</div>
<img src="/img/blog.jpg" alt="person looking out through window" class="hero-image" width="981" height="528">
<section class="articles">
    <h2 class="heading__articles">Latest Posts</h2>
    <ul class="article__ul">

        <% data.forEach(post=> { %>


            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>
<% if (nextPage !== null) { %>
 <a href="/?page=<%= nextPage  %>" class="pagination">&lt; View Older Posts</a>
<% } %>
 
</section>