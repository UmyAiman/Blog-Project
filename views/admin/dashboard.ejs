<div class="dashboard-wrapper">
  <h1 class="section-title">Dashboard</h1>

  <div class="posts-grid">
    <% if (data.length > 0) { %>
      <% data.forEach(post => { %>
        <div class="post-card">
          <h3 class="post-title"><%= post.title %></h3>
          <p class="post-snippet"><%= post.body.substring(0, 150) %>...</p>
          <div class="post-actions">
            <a href="/admin/edit-post/<%= post._id %>" class="btn">Edit</a>
            <form action="/admin/delete-post/<%= post._id %>?_method=DELETE" method="POST" class="delete-form">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="no-post">No posts found</p>
    <% } %>
  </div>
</div>
